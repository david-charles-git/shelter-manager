{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "includes/dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": [
    "typescript/**/*.ts",
    "typescript/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@/*": ["./typescript/*"]
  }
}
